        {
          "name": "Delete Room (Manager Only)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/rooms/{{room_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "rooms", "{{room_id}}"]
            }
          },
          "response": []
